generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Format {
    id           Int          @id @default(autoincrement())
    nom          String
    torro        String
    gramsXcaixo  Int
    barresXcaixo Int
    barresXcaixa Int
    temporada    Int
    packagings   Packaging[]
    ingredients  Ingredient[]
}

model Packaging {
    id      Int      @id @default(autoincrement())
    item    String
    nom     String   @unique
    X       Int
    Y       Int
    Z       Int
    formats Format[]
}

model Ingredient {
    id        Int     @id @default(autoincrement())
    nom       String
    quantitat Int
    merme     Int
    format    Format? @relation(fields: [formatId], references: [id])
    formatId  Int?
}
