generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    // url      = env("DEV_DATABASE_URL")
    url      = env("PROD_DATABASE_URL")
}

model Torro {
    id          Int          @id @default(autoincrement())
    nom         String
    ingredients Ingredient[]
}

model Ingredient {
    id      Int     @id @default(autoincrement())
    nom     String
    torrons Torro[]
}
